<%= form_for(@administrator, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @administrator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@administrator.errors.count, "error") %> prohibited this administrator from being saved:</h2>

      <ul>
      <% @administrator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, :class => 'control_label' %>
    <div class="control">
      <%= f.text_field :email %>
    </div>  
  </div>  

  <div class="control-group">
    <%= f.label :password, :class => 'control_label' %>
    <div class="control">
      <%= f.password_field :password %>
    </div>  
  </div>  

  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control_label' %>
    <div class="control">  
      <%= f.password_field :password_confirmation %>
    </div>  
  </div>    

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to 'Cancel', Administrator, :class => 'btn' %>
  </div>
<% end %>

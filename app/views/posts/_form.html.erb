<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control_label' %><br>
    <div class="control">
      <%= f.text_field :title %>
    </div>  
  </div>
  <div class="control-group">
    <%= f.label :categories, :class => 'control_label' %><br>
    <div class="control">
      <%= f.text_field :categories %>
    </div>  
  </div>
  <div class="control-group">
    <%= f.label :tags, :class => 'control_label' %><br>
    <div class="control">
      <%= f.text_field :tags %>
    </div>  
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control_label' %><br>
    <div class="control">
      <%= f.text_area :body %>
    </div>  
  </div>
  <div class="control-group">
    <%= f.label :excerpt, :class => 'control_label' %><br>
    <div class="control">
      <%= f.text_area :excerpt %>
    </div>  
  </div>

 
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', Administrator, :class => 'btn' %>
  </div>
<% end %>

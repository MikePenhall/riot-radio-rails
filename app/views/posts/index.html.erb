<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Excerpt</th>
      <th>Tags</th>
      <th>Categories</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.excerpt %></td>
        <td><%= post.tags %></td>
        <td><%= post.categories %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <br />
    <h2 class="form-signin-heading">Sign in</h2>
    <div>
      <div>
        <%= f.label :email, :class => "input-block-level" %>
        <%= f.email_field :email, :autofocus => true, :class => "input-block-level"%>
      </div>

      <div>
        <%= f.label :password, :class => "input-block-level" %>
        <%= f.password_field :password, :class => "input-block-level" %> 
      </div>

      <div class="actions form-actions">
        <%= f.submit "Sign in", :class =>'btn btn-primary' %>
      </div>
     <div> 
     <%= render :partial => "devise/shared/links" %> 
  <% end %>

</div>

